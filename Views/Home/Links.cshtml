@model List<UrlPair>
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager

<div style="background-color: #f2f2f2;">
    <div style="background-color: #fff; padding: 20px; border-radius: 5px; box-shadow: 0px 0px 10px #888888;">
        <div class="row">
            <div class="col-md-12">
                <h1>URL Shortener</h1>
                <p>Below is a list of shortened URLs.</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Full URL</th>
                            <th>Short URL</th>
                            <th>Click Count</th>
                            <th>Link</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FullUrl</td>
                                <td>@item.ShortUrl</td>
                                <td>@item.ClickCount</td>
                                <td><a href="@item.ShortUrl" target="_blank">@item.ShortUrl</a></td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
